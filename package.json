{
  "name": "termonna-vue-boilerplate",
  "version": "1.0.0",
  "description": "Vue Boilerplate",
  "author": "Termonna",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve --watch",
    "build": "vue-cli-service build",
    "lint": "eslint -c .eslintrc --ext .ts,.js,.vue src/",
    "lint-fix": "eslint -c .eslintrc --ext .ts,.js,.vue src/ --fix",
    "gitmessage-install": "git config --local commit.template .gitmessage",
    "postinstall": "npm run gitmessage-install && husky install .husky"
  },
  "dependencies": {
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vue-svg-loader": "^0.16.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "@vue/cli-plugin-babel": "^5.0.4",
    "@vue/cli-plugin-eslint": "^5.0.4",
    "@vue/cli-plugin-router": "^5.0.4",
    "@vue/cli-plugin-typescript": "^5.0.4",
    "@vue/cli-plugin-vuex": "^5.0.4",
    "@vue/cli-service": "^5.0.4",
    "@vue/eslint-config-typescript": "^5.0.4",
    "axios": "^0.21.4",
    "eslint": "^8.17.0",
    "eslint-plugin-vue": "^9.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "node-sass": "^5.0.0",
    "sass-loader": "^10.1.1",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.7.3",
    "vue-class-component": "^7.1.0",
    "vue-property-decorator": "^8.3.0",
    "vue-template-compiler": "^2.6.10",
    "vuex-module-decorators": "^0.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "eslint -c .eslintrc src/"
    ]
  }
}
